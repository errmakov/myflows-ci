{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "module": "es2022"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
